			<li><a href="#">Settings</a></li>
		</ul>
	</footer>
	<!-- End of Animated footer -->

	<!-- Scroll to top link -->
	<a href="#" id="totop">^ scroll to top</a>

	<!-- Admin template javascript load -->
	<%= javascript_include_tag 'administry' %>
</body>
</html>
